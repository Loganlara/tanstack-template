    }
    .container {
      max-width: 600px;
      padding: 20px;
      background: #fff;
      border-radius: 20px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }
    .quote {
      font-size: 1.5rem;
      margin-bottom: 20px;
      transition: all 0.4s ease;
    }
    .next-btn {
      background-color: #00796b;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 10px;
      font-size: 1rem;
      cursor: pointer;
    }
    .next-btn:hover {
      background-color: #004d40;
    }
